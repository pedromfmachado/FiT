<div id="profile">
<h1>Plano</h1>
<div id="info">
  <b>Data:</b>
  <%= @plano.data %><br />

  <b>Altura:</b>
  <%= @plano.altura %><br />

  <b>Peso:</b>
  <%= @plano.peso %><br />

  <h3>Exercícios</h3>
  <h4>Aeróbicos</h4>
  <table>
    <tr>
      <th>Nome</th>
      <th>Máquina</th>
      <th>Nível</th>
      <th>Tempo</th>
    </tr>
    <% @plano.exercicios.where(:tipo => "Aeróbico").each do |ex| %>
      <% @dados = ExerciciosPlanos.where(:plano_id => @plano.id, :exercicio_id => ex.id).first %>
        <tr>
          <td><%= ex.nome %></td> <td><%= ex.maquina %></td>
          <td><%= @dados.peso %></td><td><%= @dados.series %></td>
        </tr>
    <% end %>
  </table>

  <h4>Musculação</h4>
  <table>
    <tr>
      <th>Nome</th>
      <th>Máquina</th>
      <th>Peso</th>
      <th>Séries</th>
      <th>Repetições</th>
    </tr>
    <% @plano.exercicios.where(:tipo => "Musculação").each do |ex| %>
      <% @dados = ExerciciosPlanos.where(:plano_id => @plano.id, :exercicio_id => ex.id).first %>
        <tr>
          <td><%= ex.nome %></td> <td><%= ex.maquina %></td>
          <td><%= @dados.peso %></td><td><%= @dados.series %></td><td><%= @dados.repeticoes %></td>
        </tr>
    <% end %>
  </table>


<%= link_to 'Editar', edit_user_plano_path(params[:user_id],@plano) %> |
<%= link_to 'Listar Planos', user_planos_path(params[:user_id]) %>
</div>
</div>
