<% if current_user && @planos.count > 0 %>

<h1>Listing planos</h1>


<table>
  <tr>
    <th>Data</th>
    <th>Altura</th>
    <th>Peso</th>

  </tr>

<% @planos.each do |plano| %>
  <% if plano.user_id == current_user.id || (can? :manage, Plano) %>
  <tr>
    <td><%= plano.data %></td>
    <td><%= plano.altura %></td>
    <td><%= plano.peso %></td>
    <td><%= link_to 'Show', plano %></td>
    <% if can? :update, Plano %>
    <td><%= link_to 'Edit', edit_plano_path(plano) %></td>
    <%end%>
    <% if can? :destroy, Plano %>
    <td><%= link_to 'Destroy', plano, :confirm => 'Are you sure?', :method => :delete %></td>
    <%end%>
  </tr>
  <% end %>
<% end %>
</table>
<% else %>
  NÃ£o existem planos para listar
<% end %>

<br />
<% if can? :create, Plano %>
<%= link_to 'New Plano', new_plano_path %>
<% end %>
