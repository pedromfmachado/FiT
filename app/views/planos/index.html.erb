<div class="span16">
  <% if current_user && @planos.count > 0 %>
  <h1>Planos</h1>

  <table class="zebra-striped">
    <tr>
      <th>Data</th>
      <th>Altura</th>
      <th>Peso</th>
    </tr>

    <% @planos.each do |plano| %>
    <tr>
      <td><%= plano.data %></td>
      <td><%= plano.altura %></td>
      <td><%= plano.peso %></td>
      <td><%= link_to 'Ver', user_plano_path(@user,plano) %></td>

      <% if can? :update, Plano %>
      <td><%= link_to 'Editar', edit_user_plano_path(@user,plano) %></td>
      <% end %>

      <% if can? :destroy, Plano %>
      <td><%= link_to 'Apagar', user_plano_path(@user,plano),:confirm => 'Are you sure?', :method => :delete %></td>
      <% end %>
    </tr>
    <% end %>

  </table>
  <% end %>

	<div class="actions topSpacing0">
  <% if can? :create, Plano %>
    <%= link_to 'Criar Novo Plano', new_user_plano_path(params[:user_id]), :class => "btn primary" %>
  <% end %>
	
	<% if can? :create, PedidoPlano %>
    <%= link_to 'Pedido Novo Plano', pedido_planos_path(:user_id => current_user.id), :action => :create, :method => :post , :class => "btn success"%>
  <% end %>
  </div>

</div>

