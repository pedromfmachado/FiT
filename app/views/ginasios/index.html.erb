<div class="span14">
  <h1>Lista de Ginásios</h1>

  <div class="row spaced-lines">
    <div class="span9">
      <div class="row">
        <div class="span3 right-align">
          <strong>Cidade</strong>
        </div>
        <div class="span6">
          <div class="clearfix">
            <div class="input">
              <%= text_field_tag :cidade, 'Porto', { :rows => 5, :class => "span6 no-resize", :id => "_cidade" } %>
            </div>
          </div>

        </div>
      </div>

      <div class="row">
        <div class="span3 right-align">
          <strong>Distancia</strong>
        </div>
        <div class="span6">
          <%= text_field_tag :distancia, '50', :class => "span1 no-resize" %> km
       </div>
      </div>
    </div>
  </div>

  <table id="ginasios">
    <tr>
      <th>Nome</th>
    </tr>
   
  </table>

  <div class="actions topSpacing2">
    <%= link_to 'Criar novo Ginásio', new_ginasio_path, :class => "btn primary" %>
  </div>

</div>

