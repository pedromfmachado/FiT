
<div id="profile">
<h1>Perfil</h1>
<div id="info">

  <div class="row">
    <div class="span9">
      <div class="row">
        <div class="span3 right-align"><strong>Nome:</strong></div>
	      <div class="span6"><%= @user.nome %></div>
      </div>
  
      <div class="row">
        <div class="span3 right-align"><strong>Email:</strong></div>
	      <div class="span6"><%= @user.email %></div>
      </div>

      <div class="row">
        <div class="span3 right-align"><strong>Data Nasc.:</strong></div>
        <div class="span6"><%= @user.datanascimento %></div>
      </div>

      <div class="row">
        <div class="span3 right-align"><strong>Telefone:</strong></div>
        <div class="span6"><%= @user.telefone %></div>
      </div>

      <div class="row">
        <div class="span3 right-align"><strong>Morada:</strong></div>
        <div class="span6"><%= @user.morada %></div>
      </div>
    </div>

    <div class="span3">
      <% if @user.url_foto %>
        <%= image_tag @user.get_foto, :width => "150", :height => "150" %>
      <% else %>
        <%= image_tag "missing.png", :width => "150", :height => "150" %>
      <% end %>
    </div>
  </div>

  <!-- action buttons -->
  <div class="actions topSpacing0">
    <% if current_user.admin? && current_user.id != @user.id %>
      <% if !@user.admin? %>
        <%= link_to "Promover", { :controller => "users" , :action => "promote", :id => @user}, :class => "btn success" %>
      <% end %>

      <% if !@user.normal? %>
        <%= link_to "Despromover", { :controller => "users" , :action => "demote", :id => @user}, :class => "btn danger" %>
      <% end %>
    <% end %>

    <% if @user.normal? %>
      <%= link_to "Ver Planos", user_planos_path(@user), :class => "btn" %>
    <% end %>

    <%= link_to "Editar Perfil", edit_user_path(@user), :class => "btn primary" %>
    <%= link_to "Voltar", users_path, :class => "btn" %>
  </div>
</div>
</div>

