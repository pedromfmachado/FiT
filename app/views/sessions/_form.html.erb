<%= form_tag sessions_path, :class => "pull-right" do %>

  <%= text_field_tag :email, params[:email], :class => "input-medium", :placeholder => "Email" %>

  <%= password_field_tag :password, nil, :class => "input-medium", :placeholder => "Password" %>

  <%= button_tag "Log in", :class => "btn" %>
<% end %>
