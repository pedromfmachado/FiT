<%= form_tag sessions_path, :id => "login-panel" do %>
      <div class="form-item">
        <%= label_tag :email %><%= text_field_tag :email, params[:email] %>
      </div>
      <div class="form-item">
        <%= label_tag :password %><%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log in" %>
<% end %>
