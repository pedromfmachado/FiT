<%= form_tag sessions_path, :class => "form" do %>

<div class="mobile-content">

<%= text_field_tag :email, params[:email], :class => "input-medium", :placeholder => "Email" %> </br>
<%= password_field_tag :password, nil, :class => "input-medium", :placeholder => "Password" %> </br>
<%= submit_tag "Log in", :class =>"btn primary"%>

</div>
	
<% end %>
