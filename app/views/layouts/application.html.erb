<!DOCTYPE html>
<html>
<head>
  <title>Fit</title>
  <%= stylesheet_link_tag "bootstrap", "screen" %>
  <%= stylesheet_link_tag "mobile" if mobile_device? %>
  <%= javascript_include_tag "application.js", "controls.js", "dragdrop.js", "effects.js", "prototype.js", "jquery.js", "rails.js", "utils.js", "menu.js", "login.js" %>
  <%= javascript_include_tag "bootstrap-dropdown.js", "bootstrap-alerts.js" %>
  <%= csrf_meta_tag %>
</head>
<body>

<!-- login bar -->
<div class="topbar">
  <div class="fill">
    <div class="container">
      <a class="brand" href="#">FiT</a>

      <% if current_user %>
        <ul class="nav secondary-nav">
          <li class="menu">
            <a href="#" class="menu">Ligado como <%= current_user.nome %>.</a>
            <ul class="menu-dropdown">

              <% if current_user.admin? %>
              <li><%= link_to "Registar membro", sign_up_path %></li>
              <li class="divider"></li>
              <% end %>

              <li><%= link_to "Ver perfil", current_user %></li>
              <li><%= link_to "Log out", log_out_path %></li>
            </ul>
          </li>
        </ul>

      <!-- render <form> written in separate file -->    
      <% else %> 
        <%= render :partial => '/sessions/form' %>
      <% end %> 

    </div>
  </div>
</div> <!-- endof .topbar -->

<div id="page">
  <!-- Alertas (para ja ficam aqui por uma questão de feedback) -->
  

  <div id="logo"> 
    <!-- so faz sentido a imagem estar na pagina inicial... -->
     <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
  </div>

  <div class="line"></div>

  <div id="content">
    <ul id="menu">
      <%= link_to root_url do %> <li class="parent">Home</li> <%end%>
      <a href="#"><li class="parent">Notícias</li></a>
      <a href="#"><li class="parent">Ginásios</li></a>
      <a href="#"><li class="parent">Aulas</li></a>

      <ul>
        <li class="child"><a href="">Horários</a></li>
        <li class="child"><a href="">Modalidades</a></li>
      </ul>

      <a href="#"><li class="parent">Conta Pessoal</li></a>

      <ul>
        <%if current_user %>
        <li class="child"><%= link_to "Perfil", current_user %></li>
        <% end %>

        <%if current_user && current_user.normal? %>
        <li class="child"><%= link_to "Planos de treinos", user_planos_path(current_user) %></li>
        <% end %>
      </ul>

      <% if current_user && (current_user.admin? || current_user.staff?) %>
      <a href="#"><li class="parent">Administração</li></a>
      <ul>
        <li class="child"><%= link_to "Utilizadores", users_path %></li>
        <li class="child"><%= link_to "Exercicios", exercicios_path %></li>
      </ul>
      <% end %>
    </ul>

    <div id="content-text"> <%= yield %> </div>

  </div> <!-- endof #content -->
</div> <!-- endof #page -->

<div id="footer">
  <div id="footer-info">
    <ul>
      <li> <%= link_to "About", root_path %> </li>
      <li> <%= link_to "FAQ", root_path %> </li>
      <li> <%= link_to "Terms of Use", root_path %> </li>
      <li> <%= link_to "Help", root_path %> </li>

      <% if !mobile_device? %>
      <li ><%= link_to "Mobile Site", :mobile => 1 %></li>
      <% end %>

    </ul>
  </div>

  <div id="footer-social">
    <ul>	
      <li> <%= link_to "Facebook", root_path %> </li>
      <li> <%= link_to "Twitter", root_path %> </li>
    </ul>
  </div>
</div> <!-- endof #footer -->

</body>
</html>
